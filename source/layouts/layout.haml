!!! 5
%html{'manifest' => 'foooffline.appcache'}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=UTF-8'}
    %meta{:name => 'viewport', :content => 'initial-scale = 1.0,maximum-scale = 1.0'}
    %meta{:name => 'language', :content => 'nl_NL'}
        
    %title
      AQPlot
      = @active

    = stylesheet_link_tag 'aqplot'
    %script{:src => 'javascripts/all.js'}
    %script
      var host = $.jStorage.get('proxy-location', "http://127.0.0.1:5678/")
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{'data-toggle'=> 'collapse', 'data-target' => '.nav-collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{'href' => ''} AeroQuad Plotter
          .nav-collapse.collapse
            %ul.nav
              - if @active == 'index'
                %li.active
                  %a{'href' => './'} Home
              - else
                %li
                  %a{'href' => './'} Home
              - if @active == 'dashboard'
                %li.active
                  %a{'href' => 'dashboard.html'} Dashboard
              - else
                %li
                  %a{'href' => 'dashboard.html'} Dashboard
              - if @active == 'sensors'
                %li.active
                  %a{'href' => 'sensors.html'} Sensors
              - else
                %li
                  %a{'href' => 'sensors.html'} Sensors
              - if @active == 'receiver'
                %li.active
                  %a{'href' => 'receiver.html'} Transmitter
              - else
                %li
                  %a{'href' => 'receiver.html'} Transmitter
              - if @active == 'engines'
                %li.active
                  %a{'href' => 'engines.html'} Engines
              - else
                %li
                  %a{'href' => 'engines.html'} Engines
            %ul.nav.pull-right
              %li
                %a{'href' => '#', 'data-toggle' => "modal", 'data-target' => "#settings"}
                  %i.icon.icon-cog
                  Settings
    #content.container
      = yield
      %pre#log
      = partial '_settings'